{
  "pipeline": {
    "name": "visualizations"
  },
  "description": "Create data visualizations for the dataset.",
  "input": {
    "cross": [
      {
        "pfs": {
          "repo": "dataset",
          "glob": "/"
        }
      },
      {
        "pfs": {
          "repo": "sentiment_words",
          "glob": "/*"
        }
      }
    ]
  },
  "transform": {
    "cmd": [
      "python", "data_visualization.py",
      "--data-file", "/pfs/dataset/train.csv",
      "--sentiment-words-file", "/pfs/sentiment_words/LoughranMcDonald_SentimentWordLists_2018.csv",
      "--output-dir", "/pfs/out",
      "-v"
    ],
    "image": "jimmywhitaker/market_sentiment:dev0.15"
  },
  "standby": true,
  "resource_limits": {
    "gpu": {
      "type": "nvidia.com/gpu",
      "number": 1
    }
  },
  "resource_requests": {
    "memory": "4G",
    "cpu": 1
  }
}